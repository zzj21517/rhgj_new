.scroll_view_wrap {
  position: absolute;
  width: 100vw;
  height: 400rpx;
  background-image: linear-gradient(#FA8072, #FFF);
}
.weui-tabs-swiper {
  height: calc(100vh - 80rpx);
}

.weui-tabs-bar__content {
  padding-top: 16rpx;
  padding-right: 32rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 28rpx;
}

.weui-tabs-bar__item {
  background-color: unset !important;
  color: #fff !important;
}

.weui-tabs-bar__item:nth-child(1) {
  margin-left: 32rpx;
}

.weui-tabs-bar__item:last-child {
  margin-right: 32rpx;
}

.weui-tabs-bar__title {
  padding: 0 32rpx;
}

.tab-bar-title__selected {
  border-bottom: none !important;
  border-radius: 60rpx;
  background-color: #fff;
  color: #FA8072;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.tab-content{
  margin: 32rpx;
  padding: 32rpx;
  border-radius: 16rpx;
  background-color: #fff;
}

.btn_fast button{
  margin-top: 32rpx;
  width: 100%;
}