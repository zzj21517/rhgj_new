<!--index.wxml-->
<view class="container home">
  <!-- 菜单 -->
  <view class="scroll_view_wrap">
  </view>

  <mp-tabs wx:if="{{userInfo.userFlag===1}}" tabs="{{tabs}}" activeTab="{{activeTab}}" swiperClass="weui-tabs-swiper"
    bindtabclick="onTabCLick" bindchange="onTabChange" activeClass="tab-bar-title__selected">
    <block wx:for="{{tabs}}" wx:key="menuId">
      <view class="tab-content" slot="tab-content-{{index}}">
        <van-radio-group value="{{cid}}" bind:change="onRadioChange">
          <van-cell-group>
            <van-cell wx:for="{{item.children}}" wx:for-item="childItem" wx:key="menuId" title="{{childItem.label}}"
              clickable data-name="{{childItem.menuId}}" bind:click="onRadioClick">
              <van-radio slot="right-icon" name="{{childItem.menuId}}" checked-color="#FA8072" />
            </van-cell>
          </van-cell-group>
        </van-radio-group>

        <van-cell-group>
          <van-field model:value="{{ username }}" label="称呼" placeholder="比如李总" />
          <van-field model:value="{{ phone }}" label="手机号" placeholder="请输入手机号" border="{{ false }}" />

          <van-field model:value="{{ sms }}" center clearable label="短信验证码" placeholder="请输入短信验证码" border="{{ false }}"
            use-button-slot>
            <van-button slot="button" size="small" type="primary" color='#FA8072' bindtap="sendSmsCode">
              {{countDownNum1}}
            </van-button>
          </van-field>
          <van-button class="btn_fast" color='#FA8072' bindtap="handleApply">提交</van-button>
          <van-button bindtap="handleCall" class="btn_fast" plain color='#FA8072'>快速通道(点击拨打平台电话)</van-button>
        </van-cell-group>
      </view>
    </block>
  </mp-tabs>
  <view wx:else class="public_project_wrap">
    <view class="page-section page-section-spacing swiper">
      <swiper class="swiper_content" indicator-dots="{{true}}" autoplay="{{true}}" interval="{{5000}}"
        duration="{{1000}}">
        <block wx:for="{{bannerList}}" wx:key="index">
          <swiper-item>
            <view class="swiper-item">
              <image class="swiper_item_img" src="{{item.iconurl}}"></image>
            </view>
          </swiper-item>
        </block>
      </swiper>
    </view>
    <van-notice-bar scrollable wx:if="{{curProject.pROJECT_NUM}}" left-icon="volume-o"
      text="{{curProject.lINK_MAN}}发布了{{curProject.pROJECT_DESC}}" />
    <public-project id="public_project"></public-project>
  </view>

  <van-dialog use-slot title="优惠券领取" show="{{ dialogShow }}" show-cancel-button bind:close="onDialogClose"
    bind:confirm="onDialogConfirm">
    <view wx:for="{{couponGiveList}}" wx:key="index" class="coupon_item">
      <view class="item_left">
        <view class="left_amount">
          <view class="amount_amount">{{item.couponAmount}}</view>
          <view class="amount_unit">元</view>
        </view>
        <view class="left_limit">{{item.userFlag==0?'开通会员可用':'下单可用'}}</view>
      </view>
      <view class="item_middle">
        <view class="middle_name">{{item.couponName}}</view>
        <view class="middle_expire">有效期至:{{item.expireTime}}</view>
      </view>
    </view>
  </van-dialog>
</view>