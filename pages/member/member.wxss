/* pages/member/member.wxss */

.item {
  margin: 32rpx;
  padding: 32rpx;
  background-color: #fff;
  border: 2rpx solid rgb(247, 248, 250);
  box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.09);
  border-radius: 8rpx;
}

.disabled_item {
  color: #fff;
  background-color: #FA8072;
}

.disabled_item .item_title {
  color: #fff;
}

.disabled_item .item_desc {
  color: #fff;
}

.active_item {
  position: relative;
  border: 1px solid #E5241F;
  background: #FFFAFA;
}

.active_item::before {
  position: absolute;
  right: -1px;
  bottom: -1px;
  display: block;
  width: 0px;
  height: 0px;
  border: 20px solid transparent;
  border-right-color: #E5241F;
  border-bottom-color: #E5241F;
  border-bottom-right-radius: 4px;
  content: '';
}

.active_item::after {
  position: absolute;
  right: 4px;
  bottom: 8px;
  display: block;
  width: 15px;
  height: 8px;
  border-bottom: 2px solid #fff;
  border-left: 2px solid #fff;
  border-radius: 2px;
  transform: rotate(-45deg);
  content: '';
}

.item_title {
  font-size: 34rpx;
  line-height: 44rpx;
  color: #323233;
}

.item_amount {
  margin-top: 12rpx;
  display: flex;
  align-items: flex-end;
}

.amount_unit {
  line-height: 50rpx;
  font-size: 40rpx;
  color: #E5241F;
}

.amount_num {
  line-height: 60rpx;
  font-size: 60rpx;
  color: #E5241F;
}

.item_privilege {
  margin-top: 12rpx;
  font-size: 26rpx;
}

.item_desc {
  margin-top: 12rpx;
  line-height: 36rpx;
  font-size: 26rpx;
  color: #969799;
}