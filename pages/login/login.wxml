<!--pages/login/login.wxml-->
<view class="login container">
  <view class="logo_wrap">
    <image class="login_logo" src="../../static/images/rhjglogo.jpeg"></image>
  </view>
  <van-button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" color='#FA8072' class="login_btn">微信用户一键登录
  </van-button>

  <van-dialog use-slot title="用户信息" show="{{ showDialog }}" show-cancel-button confirm-button-open-type="getUserInfo"
    bind:close="onClose" bind:getuserinfo="getUserInfo">
    <view class="login_dialog" >需要开启用户信息授权,是否同意?</view>
  </van-dialog>
</view>